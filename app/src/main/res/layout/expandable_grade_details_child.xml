<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:weightSum="7">

    <!--        <TextView
                android:id="@+id/nameDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="CourseName"
                android:textSize="24sp"
                android:textStyle="normal|bold" />-->

    <TextView
        android:id="@+id/courseIdDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/_111111_00_5777"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:weightSum="7">

        <include layout="@layout/grade_detail" />

        <View
            style="@style/Seperator"
            android:layout_margin="5dp"
            android:background="@color/cardview_dark_background" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/detailsProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="gone" />

    <ListView
        android:id="@+id/detailsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/cardview_dark_background" />

    <TextView
        android:id="@+id/courseFinalGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/final_grade_100"
        android:textSize="24sp"
        android:textStyle="normal|bold" />
</LinearLayout>

