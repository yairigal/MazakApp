<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/appeal_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/AppealsChild_Code"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/appeal_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/AppealsChild_Name"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/appeal_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/AppealsChild_Detail"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/appeal_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/AppealsChild_Type"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/appeal_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/AppealsChild_Moed"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/appeal_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/AppealsChild_Instructor"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/appeal_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/AppealsChild_Lecturer"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/appeal_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/AppealsChild_Date"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/appeal_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/AppealsChild_Status"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />


</LinearLayout>
